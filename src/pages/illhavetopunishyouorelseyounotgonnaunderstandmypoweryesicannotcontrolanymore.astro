---
import { Secret } from "@/layouts/secret";
---

<head>
  <title>Lost in the Void</title>
</head>

<body>
  <style is:inline>
    body {
      font-family: "Courier New", monospace;
      background: black;
      color: #00ffcc;
      text-align: center;
      padding: 5rem;
    }

    a {
      color: #ff00ff;
      text-decoration: none;
    }

    a:hover {
      text-shadow: 0 0 5px #ff00ff;
    }

    .glitch {
      animation: glitch 1.5s infinite alternate;
    }

    @keyframes glitch {
      0% {
        opacity: 1;
      }
      50% {
        opacity: 0.8;
        transform: skewX(-10deg);
      }
      100% {
        opacity: 1;
      }
    }
  </style>
  <Secret client:only />
</body>
