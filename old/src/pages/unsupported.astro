---
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <div
    class="w-full h-full flex flex-col items-center text-center justify-center"
  >
    <h1 class="text-4xl font-mono">Unsupported OS</h1>
    <h1 class="text-xl font-mono mb-2">
      AHQ Store provides applications for Windows, Linux and Android only!
    </h1>

    <div class="w-full flex justify-center text-center gap-3">
      <a
        href="/applications/windows"
        class="font-mono mt-12 border-2 border-border px-4 py-2 rounded-md hover:bg-border transition-all"
      >
        <span>Windows</span>
      </a>

      <a
        href="/applications/linux"
        class="font-mono mt-12 border-2 border-border px-4 py-2 rounded-md hover:bg-border transition-all"
      >
        <span>Linux</span>
      </a>
      <a
        href="/applications/android"
        class="font-mono mt-12 border-2 border-border px-4 py-2 rounded-md hover:bg-border transition-all"
      >
        <span>Android</span>
      </a>
    </div>
  </div>
</Layout>
