---
import { RightClickMenu } from "@/components/react/RightClickMenu";
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/applications/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta
      name="description"
      content="View AHQ Store Application right in your browser!"
    />

    <title>{title ? `${title} | AHQ Store` : "AHQ Store"}</title>

    <script>
      const isNativeDark = window.matchMedia(
        "(prefers-color-scheme: dark)"
      ).matches;

      if (isNativeDark) {
        document.querySelector("html")?.classList.add("dark");
      }
    </script>
  </head>

  <body>
    <RightClickMenu client:visible>
      <slot />
    </RightClickMenu>
  </body>
</html>
